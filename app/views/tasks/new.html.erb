<h1>Enter New Task</h1>
<%= form_for @task do |f| %>

  <div class="field">
    <%= f.label :description, 'Description:' %> <br />
    <%= f.text_area :description, size: "50x6", id: "description" %> <br />
  </div>

  <div class="actions bottom_actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
